@model GameDto
@{
    ViewData["Title"] = "EditGame";
}

@Html.React("EditForm", new
{
    game = Model,
    gameId = ViewBag.GameId,
    gameGenres = ViewBag.GameGenres,
    genresData = ViewBag.Genres,
    url = Url.Action("Index"),
    updateUrl = Url.Action("UpdateGame"),
    updateGenresUrl = Url.Action("UpdateGenresForGame"),
})
<script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react/16.13.0/umd/react.development.js"></script>
<script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.13.0/umd/react-dom.development.js"></script>
<script src="@Url.Content("~/js/GameEdit.jsx")"></script>
@Html.ReactInitJavaScript()